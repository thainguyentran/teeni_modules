<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="assign_driver_view">
        <field name="name">assign.driver.wizard.form</field>
        <field name="model">assign.driver.wiz</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Driver Name">
                <group>
                    <field name="driver_id" required='1'/>
                    <field name="delivery_date"/>
                </group>
                <footer>
                    <button name="process" string="Assign" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
